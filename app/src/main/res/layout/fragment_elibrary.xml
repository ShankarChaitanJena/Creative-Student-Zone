<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81C2E9FB"
    tools:context="com.example.creativetechnocollege.com.crtv.creativetechnocollege.Elibrary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/bcabatch"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bcaimage"
                        android:layout_width="350dp"
                        android:layout_height="160dp"
                        android:src="@drawable/bcaposterf"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/bcat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BCA"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bachelor's in Computer Application"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bscbatch"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bscimage"
                        android:layout_width="350dp"
                        android:layout_height="160dp"
                        android:src="@drawable/bscposterf"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/bsct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BSC - CS (H)"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bachelor's in Computer Science"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bbabatch"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bbaimage"
                        android:layout_width="350dp"
                        android:layout_height="160dp"
                        android:src="@drawable/bbaposter"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/bbat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BBA"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bachelor's in Business Adminstration"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>



    </ScrollView>

</RelativeLayout>